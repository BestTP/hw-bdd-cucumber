<h1> New Review for <%= @movie.title %> </h1>

<%= form_tag movie_reviews_path(@movie), class: 'form' do %>
  <label class="col-form-label"> How many potatoes:</label>
  <%= select_tag 'review[potatoes]', options_for_select(1..5), class: 'form-control' %>
  <%= label :review, :comments, 'Comments', class: 'col-form-label' %>
  <%= text_area :review, :comments, class: 'form-control'%>
  <%= submit_tag 'Create Review', :class => 'btn btn-success' %>
<% end %>

<table class="table table-striped col-md-12">
  <thead>
    <tr>
      <th>Potatoes</th>
      <th>Comments</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td>
          <%= review.potatoes %>
        </td>
        <td>
          <%= review.comments %>
        </td>
        <td>
          <%= link_to "Edit", edit_movie_review_path(@movie, review.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>